{
  "apps": [
    {
      "name": "whatsapp-bot",
      "script": "index.js",
      "cwd": "/root/bot/whatsapp-bot",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "512M",
      "env": {
        "NODE_ENV": "production",
        "CHROME_PATH": "/usr/bin/google-chrome-stable"
      },
      "log_file": "logs/bot.log",
      "out_file": "logs/bot-out.log",
      "error_file": "logs/bot-error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000
    }
  ]
}
